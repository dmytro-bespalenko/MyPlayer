<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imagePlayer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/titleMyPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imagePlayer"
        android:text="@string/my_media_player"
        android:textColor="#000"
        android:textSize="13sp"
        android:paddingLeft="5dp"
        android:layout_toEndOf="@id/imagePlayer"
        android:paddingStart="5dp" />

    <ImageButton
        android:id="@+id/notiPlay"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@+id/titleMyPlayer"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/imagePlayer"
        android:layout_toRightOf="@+id/imagePlayer"
         />

    <ImageButton
        android:id="@+id/notiPause"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@+id/titleMyPlayer"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/notiPlay"
        android:layout_toRightOf="@+id/imagePlayer"
        />

    <ImageButton
        android:id="@+id/notiNext"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@+id/titleMyPlayer"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/notiPause"
        android:layout_toRightOf="@+id/imagePlayer"
        />


</RelativeLayout>
